<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".appnew1">

    <EditText
        android:id="@+id/ETN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:text="กรอกเลขบัตรประชาชน"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/CH2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ตรวจสอบสิทธิ์การเลือกตั้ง"
        app:layout_constraintEnd_toEndOf="@+id/ETN"
        app:layout_constraintStart_toStartOf="@+id/ETN"
        app:layout_constraintTop_toBottomOf="@+id/ETN" />
</androidx.constraintlayout.widget.ConstraintLayout>